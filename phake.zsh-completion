_phake() {
  local curcontext="$curcontext" state line
  local commands

  commands=( \
    'tasks:list all tasks defined in the Phakefile' \
    'groups:list all groups defined in the Phakefile' \
  )

  _arguments -s -S \
    '(--dir)--dir[specify a custom working directory]' \
    '(--phakefile)--phakefile[specify a custom Phakefile]' \
    '(--help)--help[show help text and exit]' \
    '(--version)--version[show version information and exit]'

  _describe 'command' commands

  _alternative \
    "tasks:task:($(phake tasks))" \
    "groups:group:($(phake groups))"
}

_phake "$@"
